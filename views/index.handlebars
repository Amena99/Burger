<div class="container">
<h1 class="text-center">Burgers!</h1>

<div class="row">
  <div class="col-md-4">
    <h2>Burgers not devoured!</h2>
      <ul id="burgers-list">
      {{#each burgers}}
        {{#unless devoured}}
          {{> burgers/burger-block beDevoured=true}}
        {{/unless}}
      {{/each}}
      </ul>
  </div>

  <div class="col-md-4">
    <div class="row">
      <div class="col-md-6">
    <h2>Add a Burger</h2>
      <form class="create-form">

        <div class="form-group">
          <label for="burger-name">Burger Name:</label>
          <input type="text" id="burger-name" name="name">
        </div>

        <div class="form-group">
          <label for="devoured">Devoured?</label><br>
          <input type="radio" name="devoured" id="devoured" value="1"> Devoured!<br>
          <input type="radio" name="notdevoured" value="0"> Not Devoured
        </div>

      <button class="submit-burger" type="submit">Add Burger</button>
    </form> 
    </div>

